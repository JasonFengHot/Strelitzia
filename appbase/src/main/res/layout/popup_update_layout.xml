<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/tmp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.85"/>

    <LinearLayout
        android:layout_width="@dimen/popup_update_w"
        android:layout_height="@dimen/popup_update_h"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/popup_update_mt"
        android:layout_marginLeft="@dimen/popup_update_ml"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/popup_update_pt"
        android:background="@drawable/update_bg">

        <TextView
            android:id="@+id/update_msg1"
            android:layout_width="@dimen/popup_update_text_w"
            android:layout_height="@dimen/popup_update_text_h"
            android:textSize="@dimen/popup_update_text_ts"
            android:gravity="center_vertical"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/update_msg2"
            android:layout_width="@dimen/popup_update_text_w"
            android:layout_height="@dimen/popup_update_text_h"
            android:layout_marginTop="@dimen/popup_update_text_mt"
            android:textSize="@dimen/popup_update_text_ts"
            android:gravity="center_vertical"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/update_msg3"
            android:layout_width="@dimen/popup_update_text_w"
            android:layout_height="@dimen/popup_update_text_h"
            android:layout_marginTop="@dimen/popup_update_text_mt"
            android:textSize="@dimen/popup_update_text_ts"
            android:gravity="center_vertical"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/update_msg4"
            android:layout_width="@dimen/popup_update_text_w"
            android:layout_height="@dimen/popup_update_text_h"
            android:layout_marginTop="@dimen/popup_update_text_mt"
            android:textSize="@dimen/popup_update_text_ts"
            android:gravity="center_vertical"
            android:textColor="#999999"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/popup_update_btn_h"
            android:layout_marginTop="@dimen/popup_update_btn_mt"
            android:orientation="horizontal"
            >
            
            <Button
                android:id="@+id/update_now_btn"
                android:layout_width="@dimen/popup_update_btn_w"
                android:layout_height="@dimen/popup_update_btn_h"
                android:background="@drawable/update_now_selector"/>

            <Button
                android:id="@+id/update_later_btn"
                android:layout_width="@dimen/popup_update_btn_w"
                android:layout_height="@dimen/popup_update_btn_h"
                android:layout_marginLeft="@dimen/popup_update_btn_ml"
                android:background="@drawable/update_later_selector"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>