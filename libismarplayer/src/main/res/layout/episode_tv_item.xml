<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="@dimen/player_250"
    android:layout_height="@dimen/player_80"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:background="@drawable/episode_item_selector"
    android:id="@+id/episode_list_item"
    >
    <tv.ismar.app.widget.RecyclerImageView
        android:id="@+id/select_image"
        android:layout_width="@dimen/player_38"
        android:layout_height="@dimen/player_38"
        android:layout_marginLeft="@dimen/player_20"
        android:layout_gravity="center_vertical"
        android:background="@drawable/episode_playing"
        />
    <TextView
        android:id="@+id/episode_pk"
        android:layout_width="@dimen/player_99"
        android:layout_height="@dimen/player_43"
        android:layout_marginLeft="@dimen/player_18"
        android:layout_marginTop="@dimen/player_19"
        android:gravity="center"
        android:textSize="@dimen/text_size_30sp"
        android:textColor="@color/_f0f0f0"
        />
    <TextView
        android:id="@+id/episode_subItem_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/player_43"
        android:layout_marginLeft="@dimen/player_2"
        android:layout_marginTop="@dimen/player_19"
        android:gravity="center"
        android:textSize="@dimen/text_size_30sp"
        android:textColor="@color/_f0f0f0"
        android:visibility="gone"

        />

</LinearLayout>