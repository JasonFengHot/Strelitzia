<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/menu_title"
            android:layout_width="@dimen/player_78"
            android:layout_height="@dimen/player_35"
            android:layout_marginLeft="@dimen/player_86"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="#cccccc"
            android:gravity="center"
            android:text="清晰度"
            />
        <TextView
            android:id="@+id/menu_select"
            android:layout_width="@dimen/player_250"
            android:layout_height="@dimen/player_60"
            android:paddingLeft="@dimen/player_19"
            android:paddingTop="@dimen/player_8"
            android:layout_marginTop="@dimen/player_7"
            android:textSize="@dimen/textsize_30sp"
            android:textColor="@color/_f0f0f0"
            android:background="@drawable/setting_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />
        <RelativeLayout
            android:id="@+id/wheel"
            android:layout_width="@dimen/player_250"
            android:layout_height="@dimen/player_146"
            android:layout_marginTop="@dimen/player_4"
            android:visibility="gone"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/menu_list"
                android:layout_width="@dimen/player_250"
                android:layout_height="@dimen/player_146"
                >
            </android.support.v7.widget.RecyclerView>
            <ImageView
                android:id="@+id/top_shape"
                android:layout_width="@dimen/player_250"
                android:layout_height="@dimen/player_43"
                android:background="@drawable/up_shadow"
                android:layout_alignParentTop="true"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/bottom_shape"
                android:layout_width="@dimen/player_250"
                android:layout_height="@dimen/player_43"
                android:background="@drawable/down_shadow"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>