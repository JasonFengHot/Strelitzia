<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/payment_min_width"
    android:layout_height="@dimen/payment_min_height"
    android:minHeight="@dimen/payment_min_height"
    android:minWidth="@dimen/payment_min_width"
    android:background="#012239"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_title_h"
        android:layout_marginLeft="@dimen/payment_title_ml"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_48sp" />

        <TextView
            android:id="@+id/login_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_tip_mt"
            android:text="@string/pay_warntitle"
            android:textColor="#fe8109"
            android:textSize="@dimen/text_size_30sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/username_mr"
            android:textSize="@dimen/text_size_24sp" />

    </LinearLayout>

    <tv.ismar.app.widget.RecyclerImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_h_divider"
        android:layout_marginLeft="@dimen/payment_divider_margin"
        android:layout_marginRight="@dimen/payment_divider_margin"
        android:background="@drawable/divider_person"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/pay_type_layout"
            android:layout_width="@dimen/pay_432"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <Button
                android:id="@+id/weixin"
                android:layout_width="@dimen/payment_type_btn_width"
                android:layout_height="@dimen/pay_channel_weixin_height"
                android:layout_marginTop="@dimen/pay_channel_weixin_margintop"
                android:background="@drawable/paychannel_btn_selector"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:nextFocusLeft="@id/weixin"
                android:nextFocusUp="@id/weixin"
                android:text="@string/weixinpay_button_title"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/pay_channel_weixin_textsize"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/alipay"
                android:layout_width="@dimen/payment_type_btn_width"
                android:layout_height="@dimen/pay_channel_weixin_height"
                android:layout_marginTop="@dimen/pay_channel_saoma_marginTop"
                android:background="@drawable/paychannel_btn_selector"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:nextFocusLeft="@id/alipay"
                android:text="@string/saoma_pay_button"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/pay_channel_weixin_textsize" />

            <Button
                android:id="@+id/balance_pay"
                android:layout_width="@dimen/payment_type_btn_width"
                android:layout_height="@dimen/pay_channel_weixin_height"
                android:layout_marginTop="@dimen/pay_channel_yue_marginTop"
                android:background="@drawable/paychannel_btn_selector"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:layout_below="@+id/alipay"
                android:nextFocusLeft="@id/balance_pay"
                android:text="@string/yu_e_pay_button_title"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/pay_channel_weixin_textsize" />

            <Button
                android:id="@+id/videocard"
                android:layout_width="@dimen/payment_type_btn_width"
                android:layout_height="@dimen/pay_channel_weixin_height"
                android:layout_marginTop="@dimen/pay_channel_yue_marginTop"
                android:background="@drawable/paychannel_btn_selector"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:nextFocusLeft="@id/videocard"
                android:nextFocusDown="@id/videocard"
                android:text="@string/guanyingcard_pay_button_title"
                android:layout_below="@+id/balance_pay"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/pay_channel_weixin_textsize"
                android:visibility="gone"
                />
        </RelativeLayout>

        <!--<tv.ismar.app.widget.RecyclerImageView-->
            <!--android:id="@+id/shadow"-->
            <!--android:layout_width="@dimen/payment_h_divider"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="@dimen/payment_divider_margin"-->
            <!--android:layout_marginTop="@dimen/payment_divider_margin"-->
            <!--android:background="@drawable/portrait_divider_person" />-->

        <FrameLayout
            android:id="@+id/fragment_page"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pay_638">

        </FrameLayout>

    </LinearLayout>

    <tv.ismar.app.widget.RecyclerImageView
        android:id="@+id/tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true" />
</LinearLayout>