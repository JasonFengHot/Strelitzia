<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
        
    <LinearLayout
        android:layout_width="@dimen/pay_788"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <tv.ismar.app.widget.RecyclerImageView
            android:id="@+id/qrcodeview"
            android:layout_width="@dimen/pay_475"
            android:layout_height="@dimen/pay_475"
            android:layout_marginTop="@dimen/pay_53"
            android:layout_marginLeft="@dimen/pay_201"
            android:background="#FFFFFFFF"
            />
        <TextView
            android:id="@+id/agreement"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pay_35"
            android:layout_marginLeft="@dimen/pay_325"
            android:layout_marginTop="@dimen/pay_26"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusDown="@id/agreement"
            android:textColor="@drawable/alipay_renewal_agreement_selector"
            android:textSize="@dimen/text_size_24sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/renew_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pay_53"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <tv.ismar.app.widget.RecyclerImageView
                android:layout_width="@dimen/pay_119"
                android:layout_height="@dimen/pay_119"
                android:background="@drawable/weixin_icon"
                />
            <tv.ismar.app.widget.RecyclerImageView
                android:layout_width="@dimen/pay_119"
                android:layout_height="@dimen/pay_119"
                android:background="@drawable/alipay_icon"
                android:layout_marginLeft="@dimen/pay_62"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/text_line_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pay_43"
            android:layout_marginTop="@dimen/pay_40"
            android:textSize="@dimen/text_size_30sp" />

        <TextView
            android:id="@+id/text_line_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pay_43"
            android:layout_marginTop="@dimen/pay_27"
            android:textSize="@dimen/text_size_30sp" />

        <TextView
            android:id="@+id/text_line_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pay_43"
            android:layout_marginTop="@dimen/pay_27"
            android:textSize="@dimen/text_size_30sp" />

        <TextView
            android:id="@+id/text_line_4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pay_43"
            android:layout_marginTop="@dimen/pay_27"
            android:textSize="@dimen/text_size_30sp" />
        <TextView
            android:id="@+id/text_line_5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pay_43"
            android:layout_marginTop="@dimen/pay_27"
            android:textSize="@dimen/text_size_30sp" />
    </LinearLayout>

</LinearLayout>