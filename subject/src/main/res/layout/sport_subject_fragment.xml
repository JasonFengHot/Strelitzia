<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:labelimage="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sport_bg"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bg_fragment"
        />

    <LinearLayout
        android:layout_width="754dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/game_list"
        >
        <ImageView
            android:id="@+id/up_image"
            android:layout_width="668dp"
            android:layout_height="52dp"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="152dp"
            android:background="@drawable/arrow_hover_select"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/sport_list"
            android:layout_width="wrap_content"
            android:layout_height="711dp"
            android:layout_marginTop="20dp"
            >
        </android.support.v7.widget.RecyclerView>
        <ImageView
            android:id="@+id/down_image"
            android:layout_width="668dp"
            android:layout_height="52dp"
            android:layout_marginLeft="86dp"
            android:background="@drawable/down_focus"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_detail"
        android:layout_width="1146dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_toRightOf="@+id/game_list"
        >
        <RelativeLayout
            android:layout_width="480dp"
            android:layout_height="270dp"
            android:layout_marginLeft="20dp"
            >
            <tv.ismar.app.ui.view.LabelImageView
                android:id="@+id/detail_labelImage"
                android:layout_width="480dp"
                android:layout_height="270dp"
                android:src="@drawable/a2"
                />
            <ImageView
                android:id="@+id/cp_title"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/price"
                android:layout_width="216dp"
                android:layout_height="28dp"
                android:textColor="@color/_ffffff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_18sp"
                android:background="@drawable/price"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="visible" />
            <TextView
                android:id="@+id/havebuy"
                android:layout_width="232dp"
                android:layout_height="33dp"
                android:background="@drawable/have_buy"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-5dp"
                android:layout_marginBottom="-2dp"
                android:gravity="center"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="543dp"
            android:layout_height="43dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/game_time"
            android:layout_marginTop="23dp"
            />

        <TextView
            android:layout_width="543dp"
            android:layout_height="43dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/title"
            android:layout_marginTop="5dp"
            />
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="20dp"
                >
                <Button
                    android:id="@+id/buy"
                    android:layout_width="216dp"
                    android:layout_height="72dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:background="@drawable/buy_selector"
                    android:layout_alignParentLeft="true"
                    />
                <Button
                    android:id="@+id/play"
                    android:layout_width="216dp"
                    android:layout_height="72dp"
                    android:background="@drawable/play_selector"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:paddingLeft="94dp"
                    android:paddingTop="10dp"
                    android:textSize="36sp"
                    android:text="播 放"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/subscribe"
                    android:layout_width="216dp"
                    android:layout_height="72dp"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:layout_marginLeft="266dp"
                    android:text="订 阅"
                    android:paddingLeft="94dp"
                    android:paddingTop="10dp"
                    android:background="@drawable/subscribe_selector"
                    />
            </RelativeLayout>
        <TextView
            android:layout_width="127dp"
            android:layout_height="43dp"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            android:text="相关视频"
            />
        <TextView
            android:layout_width="1040dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:alpha="0.75"
            android:textColor="@color/_ffffff"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:id="@+id/relate_list"
            android:layout_width="1146dp"
            android:layout_height="259dp"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="22dp"
            >
            <RelativeLayout
                android:id="@+id/relate_list_1"
                android:layout_width="336dp"
                android:layout_height="237dp"
                android:layout_marginLeft="20dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <tv.ismar.homepage.widget.LabelImageView3
                    android:id="@+id/relate_list_1_image"
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/list_item_preview_bg"
                    labelimage:label3_needZoom="true"
                    />

                <TextView
                    android:id="@+id/relate_list_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/relate_list_1_image"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/color_base_white"
                    android:textSize="@dimen/text_size_24sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relate_list_2"
                android:layout_width="336dp"
                android:layout_height="237dp"
                android:layout_marginLeft="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <tv.ismar.homepage.widget.LabelImageView3
                    android:id="@+id/relate_list_2_image"
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/list_item_preview_bg"
                    labelimage:label3_needZoom="true"
                    />

                <TextView
                    android:id="@+id/relate_list_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relate_list_2_image"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/color_base_white"
                    android:textSize="@dimen/text_size_24sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relate_list_3"
                android:layout_width="336dp"
                android:layout_height="237dp"
                android:layout_marginLeft="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <tv.ismar.homepage.widget.LabelImageView3
                    android:id="@+id/relate_list_3_image"
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/list_item_preview_bg"
                    labelimage:label3_needZoom="true"
                   />

                <TextView
                    android:id="@+id/relate_list_3_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relate_list_3_image"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/color_base_white"
                    android:textSize="@dimen/text_size_24sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>