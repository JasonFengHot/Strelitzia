<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/subject_754"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/nomarl"
        android:layout_width="@dimen/subject_667"
        android:layout_height="@dimen/subject_78"
        android:layout_marginLeft="@dimen/subject_56"
        android:background="@drawable/emphasis_game_normal"
        android:visibility="visible"
        >
            <TextView
                android:id="@+id/isalive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/subject_28"
                android:layout_marginLeft="@dimen/subject_104"
                android:textSize="@dimen/text_size_18sp"
                android:layout_marginTop="@dimen/subject_25"
                android:textColor="#cc0033"
                android:text="直播中"
                />
            <LinearLayout
                android:id="@+id/start_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/subject_93"
                android:layout_marginTop="@dimen/subject_11"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/start_time_ym"
                    android:layout_width="@dimen/subject_82"
                    android:layout_height="@dimen/subject_28"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_18sp"
                    android:gravity="center"
                    android:text="12月28日"
                    />
                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="@dimen/subject_82"
                    android:layout_height="@dimen/subject_28"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_18sp"
                    android:layout_marginTop="@dimen/subject_2"
                    android:gravity="center"
                    android:text="10:30"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/away_logo"
                android:layout_width="@dimen/subject_60"
                android:layout_height="@dimen/subject_60"
                android:layout_marginStart="@dimen/subject_206"
                android:layout_marginTop="@dimen/subject_11"
                />
            <TextView
                android:id="@+id/away_name"
                android:layout_width="@dimen/subject_100"
                android:layout_height="@dimen/subject_35"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_24sp"
                android:layout_toRightOf="@+id/away_logo"
                android:layout_marginLeft="@dimen/subject_5"
                android:layout_marginTop="@dimen/subject_24"
                android:gravity="center"
                android:text="灰熊"
                />
            <ImageView
                android:id="@+id/vs_image"
                android:layout_width="@dimen/subject_53"
                android:layout_height="@dimen/subject_29"
                android:layout_toRightOf="@+id/away_name"
                android:layout_marginLeft="@dimen/subject_20"
                android:layout_marginTop="@dimen/subject_25"
                android:background="@drawable/vs_normal"
                />
            <TextView
                android:id="@+id/home_name"
                android:layout_width="@dimen/subject_100"
                android:layout_height="@dimen/subject_35"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/vs_image"
                android:textSize="@dimen/text_size_24sp"
                android:layout_marginLeft="@dimen/subject_20"
                android:gravity="center"
                android:layout_marginTop="@dimen/subject_24"
                android:text="火箭"
                />
            <ImageView
                android:id="@+id/home_logo"
                android:layout_width="@dimen/subject_60"
                android:layout_height="@dimen/subject_60"
                android:layout_toRightOf="@+id/home_name"
                android:layout_marginLeft="@dimen/subject_5"
                android:layout_marginTop="@dimen/subject_11"
                />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/focus_tobig"
        android:layout_width="@dimen/subject_731"
        android:layout_height="@dimen/subject_202"
        android:layout_marginLeft="@dimen/subject_23"
        android:background="@drawable/emphasis_game_focus"
        android:visibility="gone"
        >
            <ImageView
                android:id="@+id/big_away_logo"
                android:layout_width="@dimen/subject_120"
                android:layout_height="@dimen/subject_120"
                android:layout_marginLeft="@dimen/subject_77"
                android:layout_marginTop="@dimen/subject_23"
                />
            <LinearLayout
                android:id="@+id/middle_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/subject_202"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/big_away_logo"
                android:layout_marginLeft="@dimen/subject_17"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/subject_59"
                    >
                    <TextView
                        android:id="@+id/big_away_name"
                        android:layout_width="@dimen/subject_122"
                        android:layout_height="@dimen/subject_43"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_30sp"
                        android:text="灰熊"
                        />
                    <ImageView
                        android:layout_width="@dimen/subject_78"
                        android:layout_height="@dimen/subject_42"
                        android:background="@drawable/vs_normal"
                        android:layout_marginLeft="@dimen/subject_17"
                        android:layout_marginTop="@dimen/subject_1"
                        />
                    <TextView
                        android:id="@+id/big_home_name"
                        android:layout_width="@dimen/subject_122"
                        android:layout_height="@dimen/subject_43"
                        android:layout_marginLeft="@dimen/subject_17"
                        android:gravity="center"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_size_30sp"
                        android:text="太阳"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/subject_38"
                    android:layout_marginTop="@dimen/subject_1"
                    >
                    <TextView
                        android:id="@+id/big_away"
                        android:layout_width="@dimen/subject_45"
                        android:layout_height="@dimen/subject_35"
                        android:textSize="@dimen/text_size_24sp"
                        android:gravity="center"
                        android:textColor="#333333"
                        android:text="(客)"
                        />
                    <TextView
                        android:id="@+id/big_home"
                        android:layout_width="@dimen/subject_45"
                        android:layout_height="@dimen/subject_35"
                        android:textSize="@dimen/text_size_24sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/subject_189"
                        android:text="(主)"
                        />
                </LinearLayout>
               <TextView
                   android:id="@+id/big_time"
                   android:layout_width="@dimen/subject_312"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:textSize="@dimen/textsize_30sp"
                   android:layout_marginTop="@dimen/subject_2"
                   android:layout_marginLeft="@dimen/subject_22"
                   android:textColor="#333333"
                   />
            </LinearLayout>
        <ImageView
            android:id="@+id/big_home_logo"
            android:layout_width="@dimen/subject_120"
            android:layout_height="@dimen/subject_120"
            android:layout_toRightOf="@+id/middle_text"
            android:layout_marginLeft="@dimen/subject_17"
            android:layout_marginTop="@dimen/subject_23"
            />
    </RelativeLayout>
</LinearLayout>