<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="754dp"
    android:layout_height="wrap_content"
    android:focusable="true"
    >

    <RelativeLayout
        android:id="@+id/nomarl"
        android:layout_width="667dp"
        android:layout_height="78dp"
        android:layout_marginLeft="56dp"
        android:background="@drawable/emphasis_game_normal"
        android:visibility="visible"
        >
            <TextView
                android:id="@+id/isalive"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="104dp"
                android:textSize="@dimen/text_size_18sp"
                android:layout_marginTop="25dp"
                android:textColor="#cc0033"
                android:text="直播中"
                />
            <LinearLayout
                android:id="@+id/start_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="93dp"
                android:layout_marginTop="11dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/start_time_ym"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_18sp"
                    android:gravity="center"
                    android:text="12月28日"
                    />
                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="82dp"
                    android:layout_height="28dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_18sp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="10:30"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/away_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="206dp"
                android:layout_marginTop="11dp"
                />
            <TextView
                android:id="@+id/away_name"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textColor="#333333"
                android:textSize="24sp"
                android:layout_toRightOf="@+id/away_logo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="灰熊"
                />
            <ImageView
                android:id="@+id/vs_image"
                android:layout_width="53dp"
                android:layout_height="29dp"
                android:layout_toRightOf="@+id/away_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/vs_normal"
                />
            <TextView
                android:id="@+id/home_name"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/vs_image"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:text="火箭"
                />
            <ImageView
                android:id="@+id/home_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/home_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/focus_tobig"
        android:layout_width="731dp"
        android:layout_height="202dp"
        android:layout_marginLeft="23dp"
        android:background="@drawable/emphasis_game_focus"
        android:visibility="gone"
        >
            <ImageView
                android:id="@+id/big_away_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="77dp"
                android:layout_marginTop="23dp"
                />
            <LinearLayout
                android:id="@+id/middle_text"
                android:layout_width="wrap_content"
                android:layout_height="202dp"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/big_away_logo"
                android:layout_marginLeft="17dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="59dp"
                    >
                    <TextView
                        android:id="@+id/big_away_name"
                        android:layout_width="122dp"
                        android:layout_height="43dp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_30sp"
                        android:text="灰熊"
                        />
                    <ImageView
                        android:layout_width="78dp"
                        android:layout_height="42dp"
                        android:background="@drawable/vs_normal"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="1dp"
                        />
                    <TextView
                        android:id="@+id/big_home_name"
                        android:layout_width="122dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="17dp"
                        android:gravity="center"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_size_30sp"
                        android:text="太阳"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="1dp"
                    >
                    <TextView
                        android:id="@+id/big_away"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:textSize="@dimen/text_size_24sp"
                        android:gravity="center"
                        android:textColor="#333333"
                        android:text="(客)"
                        />
                    <TextView
                        android:id="@+id/big_home"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:textSize="@dimen/text_size_24sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_marginLeft="189dp"
                        android:text="(主)"
                        />
                </LinearLayout>
               <TextView
                   android:id="@+id/big_time"
                   android:layout_width="312dp"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:textSize="@dimen/textsize_30sp"
                   android:layout_marginTop="2dp"
                   android:layout_marginLeft="22dp"
                   android:textColor="#333333"
                   />
            </LinearLayout>
        <ImageView
            android:id="@+id/big_home_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/middle_text"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="23dp"
            />
    </RelativeLayout>
</LinearLayout>