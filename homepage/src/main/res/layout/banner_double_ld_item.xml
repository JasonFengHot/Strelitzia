<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/double_ld_top_margin"
        android:layout_width="10dp"
        android:layout_height="@dimen/double_ld_poster_padding"
        android:background="#00000000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/double_ld_left_margin"
            android:layout_width="@dimen/double_ld_poster_padding"
            android:layout_height="10dp"
            android:background="#00000000"/>
        <tv.ismar.homepage.banner.IsmartvLinearLayout
            android:id="@+id/double_ld_ismartv_linear_layout"
            android:layout_width="@dimen/double_ld_poster_width"
            android:layout_height="@dimen/double_ld_poster_height"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#00000000"
            android:foreground="@drawable/selector_item_banner_subscribe"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/double_ld_item_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/double_ld_item_lt_icon"
                    android:layout_gravity="left|top"
                    android:layout_width="@dimen/double_ld_poster_lt_size"
                    android:layout_height="@dimen/double_ld_poster_lt_size" />
                <ImageView
                    android:id="@+id/double_ld_item_rb_icon"
                    android:gravity="right|bottom"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/double_ld_poster_title_size"
                    android:layout_above="@+id/double_ld_item_title"
                    android:layout_marginBottom="@dimen/double_ld_poster_rb_margin_bottom"
                    android:layout_width="@dimen/double_ld_poster_rb_width"
                    android:layout_height="@dimen/double_ld_poster_rb_height" />
                <TextView
                    android:id="@+id/double_ld_item_title"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/double_ld_poster_title_size"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/double_ld_poster_title_height" />
            </RelativeLayout>
        </tv.ismar.homepage.banner.IsmartvLinearLayout>
    </LinearLayout>
</LinearLayout>
