<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <tv.ismar.homepage.banner.IsmartvLinearLayout
        android:id="@+id/more_ismartv_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_ld_poster_padding"
        android:background="#00000000"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:foreground="@drawable/selector_item_banner_subscribe"
        android:orientation="vertical">

        <Button
            android:id="@+id/get_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="更多精彩"
            android:textColor="#ffffff"
            android:textSize="30sp" />

    </tv.ismar.homepage.banner.IsmartvLinearLayout>
</FrameLayout>