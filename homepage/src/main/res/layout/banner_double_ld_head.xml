<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <tv.ismar.homepage.banner.IsmartvLinearLayout
        android:id="@+id/double_ld_ismartv_linear_layout"
        android:layout_width="@dimen/double_ld_img_width"
        android:layout_height="@dimen/double_ld_img_height"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:background="#00000000"
        android:foreground="@drawable/selector_item_banner_subscribe"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            >

            <tv.ismar.app.widget.RecyclerImageView
                android:id="@+id/double_ld_item_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:scaleType="fitXY" />

            <tv.ismar.app.widget.RecyclerImageView
                android:id="@+id/double_ld_item_lt_icon"
                android:layout_width="@dimen/double_ld_img_lt_size"
                android:layout_height="@dimen/double_ld_img_lt_size"
                android:layout_gravity="left|top" />

            <TextView
                android:id="@+id/double_ld_item_rb_icon"
                android:layout_width="@dimen/double_ld_img_rb_icon_width"
                android:layout_height="@dimen/double_ld_img_rb_icon_height"
                android:layout_above="@+id/double_ld_item_title"
                android:layout_marginBottom="@dimen/double_ld_poster_rb_margin_bottom"
                android:gravity="right|bottom"
                android:background="@drawable/banner_post_score_bg"
                android:textColor="#ffffff"
                android:textSize="@dimen/double_ld_poster_title_size" />

            <TextView
                android:id="@+id/double_ld_item_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/double_ld_img_rb_title_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/banner_subscrib_introduction_bg"
                android:textColor="@color/_ffffff"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="@dimen/double_ld_poster_title_size" />
            <tv.ismar.app.widget.RecyclerImageView
                android:id="@+id/guide_rt_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/tv_play_recycleview_item_h"
                android:layout_marginTop="@dimen/tv_play_recycleview_item_h"
                />
        </RelativeLayout>
    </tv.ismar.homepage.banner.IsmartvLinearLayout>
</FrameLayout>