<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <tv.ismar.homepage.widget.HomeItemContainer
        android:id="@+id/guide_item_container"
        android:layout_width="@dimen/guide_switch_container_width"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="@dimen/guide_switch_container_margin_left">
        <tv.ismar.homepage.widget.DaisyVideoView
            android:id="@+id/guide_daisy_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false" />
        <ImageView
            android:id="@+id/guide_video_loading_image"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/guide_video_title"
            android:layout_width="@dimen/guide_video_title_width"
            android:layout_height="@dimen/guide_video_title_height"
            android:layout_gravity="left|bottom"
            android:textColor="#ffffff"
            android:textSize="@dimen/guide_video_title_size"
            android:text="变形金刚5:最后的骑士"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/guide_video_title_height"
            android:layout_marginLeft="@dimen/guide_swithc_container_icon_margin_left"
            android:layout_marginRight="@dimen/guide_swithc_container_icon_margin_right"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/first_video_icon"
                android:layout_width="@dimen/guide_swithc_container_icon_size"
                android:layout_height="@dimen/guide_swithc_container_icon_size"
                android:layout_marginLeft="@dimen/guide_swithc_container_icon_margin_left"
                android:layout_marginTop="@dimen/guide_swithc_container_icon_margin_top"
                android:layout_marginBottom="@dimen/guide_swithc_container_icon_margin_bottom"
                android:visibility="gone"
                android:background="@drawable/first_video_icon"/>
            <TextView
                android:id="@+id/second_video_icon"
                android:layout_width="@dimen/guide_swithc_container_icon_size"
                android:layout_height="@dimen/guide_swithc_container_icon_size"
                android:layout_marginLeft="@dimen/guide_swithc_container_icon_padding"
                android:layout_marginTop="@dimen/guide_swithc_container_icon_margin_top"
                android:layout_marginBottom="@dimen/guide_swithc_container_icon_margin_bottom"
                android:visibility="gone"
                android:background="@drawable/second_video_normal_icon"/>
            <TextView
                android:id="@+id/third_video_icon"
                android:layout_width="@dimen/guide_swithc_container_icon_size"
                android:layout_height="@dimen/guide_swithc_container_icon_size"
                android:layout_marginLeft="@dimen/guide_swithc_container_icon_padding"
                android:layout_marginTop="@dimen/guide_swithc_container_icon_margin_top"
                android:layout_marginBottom="@dimen/guide_swithc_container_icon_margin_bottom"
                android:visibility="gone"
                android:background="@drawable/third_video_normal_icon"/>
            <TextView
                android:id="@+id/four_video_icon"
                android:layout_width="@dimen/guide_swithc_container_icon_size"
                android:layout_height="@dimen/guide_swithc_container_icon_size"
                android:layout_marginLeft="@dimen/guide_swithc_container_icon_padding"
                android:layout_marginTop="@dimen/guide_swithc_container_icon_margin_top"
                android:layout_marginBottom="@dimen/guide_swithc_container_icon_margin_bottom"
                android:visibility="gone"
                android:background="@drawable/four_video_normal_icon"/>
            <TextView
                android:id="@+id/five_video_icon"
                android:layout_width="@dimen/guide_swithc_container_icon_size"
                android:layout_height="@dimen/guide_swithc_container_icon_size"
                android:layout_marginLeft="@dimen/guide_swithc_container_icon_padding"
                android:layout_marginTop="@dimen/guide_swithc_container_icon_margin_top"
                android:layout_marginBottom="@dimen/guide_swithc_container_icon_margin_bottom"
                android:visibility="gone"
                android:background="@drawable/five_video_normal_icon"/>
        </LinearLayout>
    </tv.ismar.homepage.widget.HomeItemContainer>

    <tv.ismar.homepage.banner.IsmartvLinearLayout
        android:id="@+id/guide_ismartv_linear_layout"
        android:layout_width="@dimen/guide_recycle_item_width"
        android:layout_height="@dimen/guide_recycle_item_height"
        android:background="#00ff00"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:foreground="@drawable/selector_item_banner_subscribe"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/guide_recycle_item_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/guide_recycle_item_lt_icon"
                android:layout_gravity="left|top"
                android:layout_width="@dimen/guide_recycle_item_lt_icon_size"
                android:layout_height="@dimen/guide_recycle_item_lt_icon_size" />
            <ImageView
                android:id="@+id/guide_recycle_item_rb_icon"
                android:gravity="right|bottom"
                android:textColor="#ffffff"
                android:textSize="@dimen/guide_video_title_size"
                android:layout_above="@+id/guide_recycle_item_title"
                android:layout_marginBottom="@dimen/guide_recycle_item_rb_margin_bottom"
                android:layout_width="@dimen/guide_recycle_item_rb_icon_width"
                android:layout_height="@dimen/guide_recycle_item_rb_icon_height" />
            <TextView
                android:id="@+id/guide_recycle_item_title"
                android:textColor="#ffffff"
                android:textSize="@dimen/guide_video_title_size"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/guide_recycle_item_title_height" />
        </RelativeLayout>
    </tv.ismar.homepage.banner.IsmartvLinearLayout>
</FrameLayout>