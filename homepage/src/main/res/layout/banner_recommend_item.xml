<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal">
    <View
        android:layout_width="@dimen/tv_play_recycleview_item_padding"
        android:layout_height="@dimen/tv_play_recycleview_item_h"
        android:background="#00000000"/>
    <tv.ismar.homepage.banner.IsmartvLinearLayout
        android:id="@+id/recommend_ismartv_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:foreground="@drawable/selector_item_banner_subscribe"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="@dimen/tv_play_poster_width"
            android:layout_height="@dimen/tv_play_poster_height">
            <tv.ismar.app.widget.RecyclerImageView
                android:id="@+id/recommend_item_poster"
                android:layout_width="@dimen/tv_play_poster_width"
                android:layout_height="@dimen/tv_play_poster_height"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/recommend_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:textSize="@dimen/text_size_30sp"
                android:ellipsize="end"
                android:visibility="gone"/>
            <tv.ismar.app.widget.RecyclerImageView
                android:id="@+id/guide_rt_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/tv_play_recycleview_item_h"
                android:layout_marginTop="@dimen/tv_play_recycleview_item_h"
                />
        </RelativeLayout>
    </tv.ismar.homepage.banner.IsmartvLinearLayout>
</LinearLayout>