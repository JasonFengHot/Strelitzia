<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/home_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <tv.ismar.homepage.widget.HorizontalTabView
        android:id="@+id/channel_tab"
        android:layout_width="@dimen/channel_tab_width"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/channel_tab_ml"
        android:layout_marginRight="@dimen/channel_tab_ml"
        android:layout_marginTop="@dimen/channel_tab_mt"
        app:tvTabFocusTextColor="#ff9c3c"
        app:tvTabHeight="80dp"
        app:tvTabScaleBaseline="fromCenter"
        app:tvTabScaleMultiple="1.1"
        app:tvTabSelectedDrawable="@drawable/channel_indicator_focus"
        app:tvTabSpace="@dimen/channel_tab_space"
        app:tvTabStartEndPadding="16dp"
        app:tvTabTextColor="#999999"
        app:tvTabTextSize="@dimen/text_size_36sp"
        />

    <ListView
        android:layout_below="@id/channel_tab"
        android:id="@+id/guide_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:onClick="go2Guide"
        android:text="测试" />
</RelativeLayout>
