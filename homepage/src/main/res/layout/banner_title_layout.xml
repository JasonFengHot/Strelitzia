<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/banner_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/channel_title_margin_bottom"
        android:layout_marginLeft="@dimen/channel_title_margin_left"
        android:layout_marginRight="@dimen/channel_title_margin_right"
        android:layout_marginTop="@dimen/channel_title_margin_top"
        android:singleLine="true"
        android:textColor="#cccccc"
        android:textSize="@dimen/channel_title_size" />

    <TextView
        android:id="@+id/banner_title_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/channel_title_margin_bottom"
        android:layout_marginTop="@dimen/channel_title_margin_top"
        android:singleLine="true"
        android:text="@string/home_item_title_count"
        android:textColor="#cccccc"
        android:textSize="@dimen/channel_title_size" />
</LinearLayout>