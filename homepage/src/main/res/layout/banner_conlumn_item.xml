<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal">
    <View
        android:id="@+id/left_space"
        android:layout_width="@dimen/column_item_padding"
        android:layout_height="10dp"
        android:background="#00000000"/>
    <tv.ismar.homepage.banner.IsmartvLinearLayout
        android:id="@+id/conlumn_ismartv_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:foreground="@drawable/selector_item_banner_subscribe"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="@dimen/column_item_width"
            android:layout_height="@dimen/column_item_height">
            <tv.ismar.app.widget.RecyclerImageView
                android:id="@+id/conlumn_item_poster"
                android:layout_width="@dimen/column_item_width"
                android:layout_height="@dimen/column_item_height"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/conlumn_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/column_item_text_margin_right"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone"
                android:textSize="@dimen/text_size_50sp"/>
        </RelativeLayout>
    </tv.ismar.homepage.banner.IsmartvLinearLayout>

    <View
        android:id="@+id/right_space"
        android:layout_width="@dimen/column_item_padding"
        android:layout_height="10dp"
        android:background="#00000000"/>
</LinearLayout>