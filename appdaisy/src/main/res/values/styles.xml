<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <declare-styleable name="IndicatorButton">
        <attr name="ib_drawable" format="reference" />
        <attr name="ib_textSize" format="dimension" />
        <attr name="ib_textColor" format="color" />
        <attr name="ib_text" format="string" />
        <attr name="ib_wrapContent" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DetailAttributeContainer">
        <attr name="dac_textSize" format="dimension" />
        <attr name="dac_textColor" format="color" />
        <attr name="dac_space" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LabelImageView">
        <attr name="livWidth" format="dimension" />
        <attr name="livHeight" format="dimension" />
        <attr name="livUrl" format="string" />
        <attr name="livSelectorDrawable" format="reference" />
        <attr name="livErrorDrawable" format="reference" />
        <attr name="livContentPadding" format="dimension" />
        <attr name="livLabelHeight" format="dimension" />
        <attr name="livLabelText" format="string" />
        <attr name="livLabelColor" format="color" />
        <attr name="livLabelSize" format="dimension" />
        <attr name="livLabelBackColor" format="color" />
        <attr name="livVipPosition">
            <enum name="leftTop" value="0" />
            <enum name="rightTop" value="1" />
            <enum name="gone" value="-1" />
        </attr>
        <attr name="livVipUrl" format="string" />
        <attr name="livVipSize" format="dimension" />
        <attr name="livRate" format="float" />
        <attr name="livRateColor" format="color" />
        <attr name="livRateSize" format="dimension" />
        <attr name="livRateMarginRight" format="dimension" />
        <attr name="livRateMarginBottom" format="dimension" />
    </declare-styleable>

</resources>
