<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <declare-styleable name="IndicatorButton">
        <attr name="ib_drawable" format="reference" />
        <attr name="ib_textSize" format="dimension" />
        <attr name="ib_textColor" format="color" />
        <attr name="ib_text" format="string" />
        <attr name="ib_wrapContent" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DetailAttributeContainer">
        <attr name="dac_textSize" format="dimension" />
        <attr name="dac_textColor" format="color" />
        <attr name="dac_space" format="dimension" />
    </declare-styleable>

</resources>
