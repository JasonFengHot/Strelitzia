<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/purchase_history_item_selector"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:minHeight="@dimen/purchaseFragment_item_minHeight"
>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/header_divider"/>
    <ImageView
        android:id="@+id/orderlistitem_icon"
        android:layout_width="@dimen/purchaseFragment_item_image_width"
        android:layout_height="@dimen/purchaseFragment_item_image_height"
        android:scaleType="fitXY"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/purchase_history_item_margin_left"
        android:layout_toRightOf="@+id/orderlistitem_icon"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/purchaseFragment_item_order_title_marginTop"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderlistitem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/h4_text_size"
            />

            <TextView
                android:id="@+id/purchase_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/purchaseFragment_item_order_extra_marginLeft"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/h4_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/purchase_history_text_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderlistitem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/h4_text_size"
            />

            <TextView
                android:id="@+id/orderlistitem_remainday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/purchaseFragment_item_marginLeft"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/h4_text_size"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/purchase_history_text_margin_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderlistitem_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/h4_text_size"
            />

            <TextView
                android:id="@+id/orderlistitem_paychannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/purchaseFragment_item_marginLeft"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/h4_text_size"
            />

            <TextView
                android:id="@+id/orderlistitem_merge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/purchaseFragment_item_marginLeft"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/h4_text_size"
            />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>