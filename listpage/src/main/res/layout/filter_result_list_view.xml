<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sakura="http://schemas.android.com/apk/res-auto"
    android:id="@+id/large_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gridview_channel_panel_height"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/filter_portraitresult_top_layout_ml">
    <TextView
        android:text="搜索结果 :"
        android:id="@+id/filter_result_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/h1_text_size" />

     <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/filter_condition_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        </LinearLayout>

</LinearLayout>
    <ProgressBar
            android:id="@+id/filter_percentage"
            android:layout_width="@dimen/filter_portraitresult_filter_percentage_w"
            android:layout_height="@dimen/filter_portraitresult_filter_percentage_h"
            android:progressDrawable="@drawable/progressbg"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/filter_portraitresult_filter_percentage_margin"
            android:layout_marginRight="@dimen/filter_portraitresult_filter_percentage_margin"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:visibility="invisible"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/left_shadow"
                android:layout_width="@dimen/filter_portraitresult_shadow_w"
                android:layout_height="@dimen/filter_portraitresult_shadow_h"
                android:background="@drawable/channel_arrow_left"
                android:layout_marginLeft="@dimen/filter_portraitresult_filter_grid_pt"
                android:layout_marginTop="@dimen/filter_portraitresult_button_mt"
                />
        <Button
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:id="@+id/right_shadow"
                android:layout_width="@dimen/filter_portraitresult_shadow_w"
                android:layout_height="@dimen/filter_portraitresult_shadow_h"
                android:background="@drawable/channel_arrow_right"
                android:layout_marginTop="@dimen/filter_portraitresult_button_mt"
                android:layout_marginRight="@dimen/filter_portraitresult_filter_grid_pt"/>
        <tv.ismar.app.ui.HGridView
                android:layout_toLeftOf="@id/right_shadow"
                android:layout_toRightOf="@id/left_shadow"
                android:id="@+id/filter_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                sakura:horizontalSpacing="@dimen/listview_hgride_horSpace"
                sakura:numRows="3"
                sakura:rowHeight="@dimen/listview_hgride_rowHeight"
                sakura:selectorDrawable="@drawable/vod_gv_selector"
                sakura:verticalSpacing="0dip"
                sakura:selectionLeftPadding="@dimen/HGridView_related_selectionLeftPadding"
                sakura:selectionTopPadding="@dimen/HGridView_related_selectionTopPadding"
                sakura:selectionRightPadding="@dimen/HGridView_related_selectionRightPadding"
                sakura:selectionBottomPadding="@dimen/HGridView_related_selectionBottomPadding"
                android:paddingTop="@dimen/filter_result_list_filter_grid_pr"
                android:layout_marginTop="@dimen/filmitem_portrait_middle_btn_ml"
                android:layout_marginLeft="@dimen/listportait_Hgride_ml"
                android:layout_marginRight="@dimen/filmitem_portrait_middle_btn_ml"
                android:layout_marginBottom="@dimen/filter_result_list_filter_grid_mb"
                android:paddingRight="@dimen/filter_result_list_filter_grid_pr"
                android:paddingLeft="@dimen/listportait_Hgride_pl">
        </tv.ismar.app.ui.HGridView>
    </RelativeLayout>

</LinearLayout>

    <LinearLayout
            android:visibility="gone"
            android:id="@+id/noresult_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/nofilter_top_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/filter_noresult_layout_h"
                android:orientation="vertical"
                >
            <TextView
                    android:layout_marginTop="@dimen/listpage_portrait_detail_title_mt"
                    android:text="抱歉,您的筛选条件太多了,没有找到匹配的内容"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/h1_text_size" />

            <Button
                    android:layout_marginTop="@dimen/filter_norestult_buton_mt"
                    android:layout_gravity="center_horizontal"
                    android:text="重新筛选"
                    android:textSize="@dimen/h2_text_size"
                    android:gravity="center"
                    android:id="@+id/refilter_btn"
                    android:layout_width="@dimen/filter_noresult_button_W"
                    android:layout_height="@dimen/filter_noresult_button_H"
                    android:background="@drawable/filter_btn_selector"
                    android:textColor="@android:color/white">
            </Button>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/filter_noresult_text_ML"
                    android:layout_marginTop="@dimen/filter_noresult_text_mt"
                    android:textSize="@dimen/h2_text_size"
                    android:textColor="@android:color/white"
                    android:text="当前大家正在看"/>
        </LinearLayout>
        <ProgressBar
                android:id="@+id/recommend_filter_percentage"
                android:layout_width="@dimen/filter_portraitresult_filter_percentage_w"
                android:layout_height="@dimen/filter_portraitresult_filter_percentage_h"
                android:progressDrawable="@drawable/progressbg"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/filter_portraitresult_filter_percentage_margin"
                android:layout_marginRight="@dimen/filter_portraitresult_filter_percentage_margin"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:visibility="invisible"
                    android:clickable="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/recommend_left_shadow"
                    android:layout_width="@dimen/filter_portraitresult_shadow_w"
                    android:layout_height="@dimen/filter_portraitresult_shadow_h"
                    android:background="@drawable/channel_arrow_left"
                    android:layout_marginLeft="@dimen/listportait_button_ml"
                    android:layout_marginBottom="@dimen/filter_noresult_arrow_Mb"
                    />
            <Button
                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/recommend_right_shadow"
                    android:layout_width="@dimen/filter_portraitresult_shadow_w"
                    android:layout_height="@dimen/filter_portraitresult_shadow_h"
                    android:background="@drawable/channel_arrow_right"
                    android:layout_marginRight="@dimen/listportait_button_ml"
                    android:layout_marginBottom="@dimen/filter_noresult_arrow_Mb"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />
            <tv.ismar.app.ui.HGridView
                    android:layout_toLeftOf="@id/recommend_right_shadow"
                    android:layout_toRightOf="@id/recommend_left_shadow"
                    android:id="@+id/recommend_filter_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    sakura:horizontalSpacing="@dimen/filter_noresult_Gride_horizontalSpacing"
                    sakura:numRows="2"
                    sakura:rowHeight="@dimen/filter_noresult_Gride_rowHeight"
                    sakura:selectorDrawable="@drawable/vod_gv_selector"
                    sakura:verticalSpacing="0dp"
                    sakura:selectionLeftPadding="@dimen/HGridView_related_selectionLeftPadding"
                    sakura:selectionTopPadding="@dimen/HGridView_related_selectionTopPadding"
                    sakura:selectionRightPadding="@dimen/HGridView_related_selectionRightPadding"
                    sakura:selectionBottomPadding="@dimen/HGridView_related_selectionBottomPadding"
                   android:paddingTop="@dimen/filter_result_list_filter_grid_pt"
                android:layout_marginTop="@dimen/filter_noresult_Gride_MT"
                android:layout_marginLeft="@dimen/filter_noresult_Gride_ML"
                android:layout_marginRight="@dimen/filter_noresult_Gride_ML"
                android:layout_marginBottom="@dimen/filter_noresult_Gride_MB"
                android:paddingRight="@dimen/filter_result_list_filter_grid_pr"
                android:paddingLeft="@dimen/filter_result_list_filter_grid_pl">
            </tv.ismar.app.ui.HGridView>
        </RelativeLayout>
  </LinearLayout>
</LinearLayout>