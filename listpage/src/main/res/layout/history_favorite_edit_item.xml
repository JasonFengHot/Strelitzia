<?xml version="1.0" encoding="utf-8"?>
<tv.ismar.view.IsmartvLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:orientation="vertical"
                                   android:background="#00000000"
                                   android:layout_width="@dimen/history_432"
                                   android:layout_height="@dimen/history_306"
                                   android:foreground="@drawable/poster_focus_selector"
                                   android:focusableInTouchMode="true"
                                   android:focusable="true"
                                   android:clipChildren="false"
                                   android:clipToPadding="false"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_243">
                <tv.ismar.app.widget.RecyclerImageView
                    android:id="@+id/item_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <tv.ismar.app.widget.RecyclerImageView
                    android:id="@+id/vip_image"
                    android:layout_width="@dimen/history_109"
                    android:layout_height="@dimen/history_109"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    />
                <tv.ismar.app.widget.RecyclerImageView
                    android:id="@+id/marking_bg"
                    android:layout_width="@dimen/history_78"
                    android:layout_height="@dimen/history_40"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/history_151"
                    android:background="@drawable/mark_icon"
                    />
                <TextView
                    android:id="@+id/marking"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/history_43"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/history_149"
                    android:layout_marginEnd="@dimen/history_12"
                    android:textSize="@dimen/text_size_30sp"
                    android:textColor="@color/_ffffff"
                    />
                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_43"
                    android:textSize="@dimen/text_size_30sp"
                    android:textColor="#cccccc"
                    android:layout_marginTop="@dimen/history_200"
                    android:gravity="center"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />
                <tv.ismar.app.widget.RecyclerImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_63"
                    android:background="#000000"
                    android:alpha="0.25"
                    android:layout_marginTop="@dimen/history_243"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/focus_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_36sp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
        </LinearLayout>
        <tv.ismar.app.widget.RecyclerImageView
            android:id="@+id/edit_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/delete_bg"
            android:visibility="gone"
            />
    </RelativeLayout>

</tv.ismar.view.IsmartvLinearLayout>