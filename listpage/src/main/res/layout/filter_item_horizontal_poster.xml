<?xml version="1.0" encoding="utf-8"?>

<tv.ismar.homepage.banner.IsmartvLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:foreground="@drawable/selector_item_banner_subscribe"
    android:orientation="vertical"
  >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <tv.ismar.app.widget.RecyclerImageView
        android:id="@+id/item_horizontal_poster_img"
        android:layout_width="@dimen/item_horizontal_poster_img_w"
        android:layout_height="@dimen/item_horizontal_poster_img_h" />
    
    <tv.ismar.app.widget.RecyclerImageView
        android:id="@+id/item_horizontal_poster_vip"
        android:layout_width="@dimen/item_horizontal_poster_vip_w"
        android:layout_height="@dimen/item_horizontal_poster_vip_w" />

    <TextView
        android:id="@+id/item_horizontal_poster_mark"
        android:layout_width="@dimen/item_horizontal_poster_mark_w"
        android:layout_height="@dimen/item_horizontal_poster_mark_h"
        android:layout_marginTop="@dimen/item_horizontal_poster_mark_mt"
        android:textSize="@dimen/item_horizontal_poster_mark_ts"
        android:layout_alignRight="@id/item_horizontal_poster_img"
        android:gravity="right|center_vertical"
        android:background="@drawable/mark_icon"
        android:paddingRight="@dimen/item_horizontal_poster_mark_pr"/>
    
    <TextView
        android:id="@+id/item_horizontal_poster_des"
        android:layout_width="@dimen/item_horizontal_poster_des_w"
        android:layout_height="@dimen/item_horizontal_poster_des_h"
        android:background="@drawable/filter_poster_title_bg"
        android:textSize="@dimen/item_horizontal_poster_des_ts"
        android:textColor="#cccccc"
        android:gravity="center"
        android:singleLine="true"
        android:layout_alignBottom="@+id/item_horizontal_poster_img"/>

    <View
        android:id="@+id/item_horizontal_title_bg"
        android:layout_width="@dimen/item_horizontal_poster_title_w"
        android:layout_height="@dimen/item_horizontal_poster_title_h"
        android:background="#000000"
        android:alpha="0.25"
        android:layout_below="@id/item_horizontal_poster_img"/>

    <TextView
        android:id="@+id/item_horizontal_poster_title"
        android:layout_width="@dimen/item_horizontal_poster_title_w"
        android:layout_height="@dimen/item_horizontal_poster_title_h"
        android:textSize="@dimen/item_horizontal_poster_title_ts"
        android:textColor="#f0f0f0"
        android:gravity="center"
        android:ellipsize="end"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:layout_below="@id/item_horizontal_poster_img"/>
</RelativeLayout>
    </tv.ismar.homepage.banner.IsmartvLinearLayout>