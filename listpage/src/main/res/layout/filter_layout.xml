<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e163a"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
<LinearLayout
    android:layout_width="358dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/filter_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="60dp"
        android:textColor="#cccccc"
        android:layout_marginTop="18dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/filter_tab"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:background="@drawable/filter_tab_icon"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="48dp"/>
    
</LinearLayout>
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:alpha="0.1"/>
    <View
        android:id="@+id/current_tab_arrow"
        android:layout_width="16dp"
        android:layout_height="146dp"
        android:background="@drawable/current_tab_arrow"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="109dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        >

        <tv.ismar.app.widget.MyRecyclerView
            android:id="@+id/poster_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="124dp"
            android:clipToPadding="false"
            android:clipChildren="false"/>
        <LinearLayout
            android:id="@+id/filter_checked_conditiion"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal"
            android:paddingTop="33dp"
            android:background="#0e163a"
            >

            <TextView
                android:layout_width="136dp"
                android:layout_height="43dp"
                android:textSize="30dp"
                android:textColor="#f0f0f0"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="30dp"
                android:text="筛选条件:"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>


    <Button
        android:id="@+id/filter_arrow_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="546dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/filter_arrow_up_selector"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/filter_arrow_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="368dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/filter_arrow_down_selector"
        android:layout_alignParentRight="true"/>

</RelativeLayout>