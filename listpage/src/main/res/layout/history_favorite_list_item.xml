<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/history_492"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    >
    <RelativeLayout
        android:layout_width="@dimen/history_492"
        android:layout_height="@dimen/history_407"
        android:clipToPadding="false"
        android:clipChildren="false"
        >

        <ImageView
            android:layout_width="@dimen/history_492"
            android:layout_height="@dimen/history_2"
            android:layout_marginTop="@dimen/history_7"
            android:background="@color/_333333"
            android:layout_marginLeft="@dimen/history_32"
            />
        <ImageView
            android:id="@+id/item_time_node"
            android:layout_width="@dimen/history_16"
            android:layout_height="@dimen/history_16"
            android:background="@drawable/history_time"
            android:layout_marginLeft="@dimen/history_32"
            />
        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/history_52"
            android:layout_marginTop="@dimen/history_19"
            android:textSize="@dimen/text_size_36sp"
            android:textColor="#cccccc"
            android:gravity="center"
            android:text="6月30日"
            android:layout_marginLeft="@dimen/history_28"
            />
        <tv.ismar.view.IsmartvLinearLayout
            android:id="@+id/item_detail"
            android:layout_width="@dimen/history_432"
            android:background="#00000000"
            android:layout_height="@dimen/history_306"
            android:foreground="@drawable/poster_focus_selector"
            android:focusableInTouchMode="false"
            android:focusable="true"
            android:layout_marginTop="@dimen/history_76"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginLeft="@dimen/history_32"
            >
            <ImageView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/more"
                android:visibility="gone"
                />
             <ImageView
                android:id="@+id/item_detail_image"
                android:layout_width="@dimen/history_432"
                android:layout_height="@dimen/history_243"
                />
            <RelativeLayout
                android:id="@+id/item_title_layout"
                android:layout_width="@dimen/history_432"
                android:layout_height="@dimen/history_63"
                android:layout_below="@+id/item_detail_image"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:alpha="0.25"
                    />
            <TextView
                android:id="@+id/item_title"
                android:layout_width="@dimen/history_432"
                android:layout_height="@dimen/history_52"
                android:layout_marginTop="@dimen/history_5"
                android:textSize="@dimen/text_size_36sp"
                android:textColor="@color/_ffffff"
                android:gravity="center"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="end"
                android:focusable="true"
                />
            </RelativeLayout>
        </tv.ismar.view.IsmartvLinearLayout>
    </RelativeLayout>
</LinearLayout>